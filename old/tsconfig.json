{
  "compilerOptions": {
    "target": "ESNext",
    "allowJs": true,
    "moduleResolution": "Node",
    "module": "commonjs",
    "outDir": "./dist",
    "lib": [
      "ESNext"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types",
      "typings",
    ],
    "baseUrl": ".",
    "paths": {},
  },
  "compileOnSave": false,
  "includes": [
    "global.d.ts",
    "**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}